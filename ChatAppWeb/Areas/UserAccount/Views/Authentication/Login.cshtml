@model UserVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Login</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-12">
                <section>
                    <form method="post">
                        <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">Use a local account to log in.</h3>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="AppUser.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="AppUser.Email" class="form-label"></label>
                            <span asp-validation-for="AppUser.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Password" class="form-label"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div>
                            <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                        </div>
                        <div class="d-flex justify-content-between pt-2">
                            <p>
                                <a asp-area="UserAccount" asp-controller="UserAccount" asp-action="Register">Register as a new user</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
            
        </div>
    </div>
</div>
@model ChannelModel
@{
    var channelVM = new Dictionary<string, string>
    {
        {"channelId", Model.Id},
        {"channelName", Model.Name}
    };
}

<div class="row align-items-center">
    <img src="https://placehold.co/500x500/png" class="col-4 mb-3" style="width:30%; border-radius:50%;"/>
    <div class="container col-8 m-0 p-0">
        @if(Model.Type == "Chat")
        {
            <a class="nav-link" onclick="saveData()" asp-area="UserHome" asp-controller="Chat" asp-action="Index" asp-all-route-data="channelVM">
                <div class="row">
                    <span class="fw-bold d-inline-block text-truncate w-75">@Model.Name</span>
                    @if(Model.UnreadMessagesCount > 0)
                    {
                        <div class="circled-number">
                            <span>@Model.UnreadMessagesCount</span>
                        </div>
                    }
                    else if(Model.UnreadMessagesCount >= 99)
                    {
                        <div class="circled-number">
                            <span>+99</span>
                        </div>
                    }
                    
                </div>
                <p class="fs-6 text-truncate">
                    @Model.LastMessage
                </p>
            </a>
        }
        else
        {
            <a class="nav-link" onclick="saveData()" asp-area="UserHome" asp-controller="Group" asp-action="Index" asp-all-route-data="channelVM">
                <div class="row">
                    <span class="fw-bold d-inline-block text-truncate w-75">@Model.Name</span>
                    @if (Model.UnreadMessagesCount > 0)
                    {
                        <div class="circled-number">
                            <span>@Model.UnreadMessagesCount</span>
                        </div>
                    }
                    else if (Model.UnreadMessagesCount >= 99)
                    {
                        <div class="circled-number">
                            <span>+99</span>
                        </div>
                    }

                </div>
                <p class="fs-6 text-truncate">
                    @Model.LastMessage
                </p>
            </a>
        }
    </div>
</div>